    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Api",
            "protocol": "inspector",
            "args": [
                "${workspaceRoot}/api/src/main.ts"
            ],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "autoAttachChildProcesses": true
        }
    ]
}